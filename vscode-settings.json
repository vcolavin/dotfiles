{
  "workbench.startupEditor": "newUntitledFile",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "all",
  "editor.wordWrap": "bounded",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.wordWrapColumn": 100,
  "editor.wrappingIndent": "indent",
  "editor.tabSize": 4,
  "editor.minimap.enabled": false,
  "explorer.openEditors.visible": 0,
  "window.zoomLevel": 1,
  "window.title": "(* ^ ω ^)   ${rootName} (◕‿◕) ${activeEditorMedium}   (´ ∀ ` *)",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "gitblame.infoMessageFormat": "${commit.hash}",
  "gitblame.statusBarMessageFormat": "${commit.hash_short, 8} | ${time.ago} | ${commit.summary} | ${committer.name}",
  "gitblame.ignoreWhitespace": true,
  "search.exclude": {
    "release/*": true,
    "build/*": true,
    "src/js/libs/*": true,
    "src/css/*": true,
    "node_modules/*": true
  },
  "workbench.colorTheme": "Default High Contrast",
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "workbench.activityBar.visible": true,
  "workbench.editor.showTabs": true,
  "workbench.settings.editor": "json",
  "atomKeymap.promptV3Features": true,
  "emmet.showSuggestionsAsSnippets": true,
  "editor.snippetSuggestions": "top"
}
